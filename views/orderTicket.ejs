    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <h1>Order Ticket</h1>
        <form action="/tickets/order" method="post">
            <label for="date">Date:</label>
            <input type="date" id="date" name="date" required min="">
            <button type="submit">Order Ticket for Â£20</button>
        </form>
        <button class="secondary" onclick="window.location.href='/auth/logout'">Logout</button>
        <button onclick="window.location.href='/tickets/future'">Check Tickets</button>
    </div>

    <script>
        // Set the minimum date for the date input to today
        document.getElementById('date').min = new Date().toISOString().split('T')[0];
    </script>
</body>
</html>
